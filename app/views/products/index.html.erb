<% if @products.empty? %>
    <h2>You don't have any products yet! </h2>
    <h4><br> Add a <%= link_to 'routine', routines_path %> first to create your first product!</h4>
<% else %>
    <h2>Here are all of the products you currently use:</h2>
    <% @products.each do |p| %>
    <%= link_to p.name, product_routines_path(p) %> <br>
    <% end %>
<% end %>